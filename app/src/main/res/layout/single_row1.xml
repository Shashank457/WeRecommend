<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgRecRow1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        />
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imgRecRow1"
        android:paddingTop="10dp"
        android:paddingBottom="7dp"
        android:text="Hello World"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtDetail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/txtTitle"
        android:layout_toEndOf="@+id/imgRecRow1"
        android:padding="1dp"
        android:text="Hello World"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtDetail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/txtDetail1"
        android:layout_toEndOf="@+id/imgRecRow1"
        android:padding="1dp"
        android:text="Hello World"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtDetail3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/txtDetail2"
        android:layout_toEndOf="@+id/imgRecRow1"
        android:padding="1dp"
        android:text="Hello World"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="italic" />

</RelativeLayout>